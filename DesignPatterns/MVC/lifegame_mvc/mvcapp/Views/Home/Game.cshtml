
@{
    ViewData["Title"] = "Game";
}

<br />
<h2>Conway's Game of Life</h2>


<div>
    <br />
    <br />
    <input class="input-lg" id="horizon_num" placeholder="input x value here" />
    <input class="input-lg" id="vertical_num" placeholder="input y value here" />
    <button id="run_game" class="btn-lg" style="background-color: cadetblue" type="button">run</button>
    <br />
    <br />
    <button id="start" class="btn-lg" style="background-color: aqua" type="button">Start</button>
    <button id="pulse" class="btn-lg" style="background-color: aquamarine" type="button">Pulse</button>

    @*<button id="refreshbutton">Refresh</button>*@
    <br />
    <br />
    <br />
    <table class="table-striped">
        @{
            for (int i = 0; i < CellsModel.VerticalNumber; i++)
            {
                <tr>
                    @{
                        for (int j = 0; j < CellsModel.HorizonNumber; j++)
                        {
                            string id = "id" + "_" + i.ToString() + "_" + j.ToString();
                            if (CellsModel.Face[j, i])
                            {
                                <td height="100px" width="100px">
                                    <div id="@id">
                                        <div class="cell" style="background-color: darkgreen" />
                                    </div>
                                </td>
                            }
                            else
                            {
                                <td height="100px" width="100px">
                                    <div id="@id">
                                        <div class="cell" style="background-color: darkgray" />
                                    </div>
                                </td>
                            }
                        }
                    }
                </tr>
            }
        }
    </table>
</div>
<br />
